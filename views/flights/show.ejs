<%- include('../partials/header') %>

<section id="show-page">
    <div>Airline:</div>
    <div><%= flight.airline %></div>
    <div>Airport:</div>
    <div><%= flight.airport %></div>
    <div>Flight Number:</div>
    <div><%= flight.flightNo %></div>
    <div>Departs:</div>
    <div><%= flight.departs %></div>
    <div>Arrival:</div>
    <% if (flight.destination.length) { %>
        <table>
          <thead>
            <tr>
              <th>Airport</th>
              <th>Arrival Time</th>
            </tr>
          </thead>
          <tbody>
            <% flight.destination.forEach(function(dest) { %>
              <tr>
                <td><%= dest.airport %></td>
                <td><%= dest.arrival.toLocaleString() %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      <% } else { %>
        <h5>No Destination</h5>
      <% } %>
<form id="add-arrival-form" method="POST" action="/flights/<%= flight._id %>/destination">
  <input type="date" name="arrival">
<label>Arrival Airport</label>
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
<input type="submit" value="Add Arrival">
</form>
<h3>Tickets</h3>
<table>
  <input name="seat" required pattern="[A-F][1-9]\d?">
 <!-- <thead></thead> -->
</table>
</section>